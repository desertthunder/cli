{
  "name": "@desertthunder/cli",
  "version": "0.2.1",
  "exports": "./src/mod.ts",
  "license": "CC-BY-4.0",
  "tasks": {
    "dev": "deno run --watch example.ts"
  },
  "imports": {
    "$cli": "./src/cli/mod.ts",
    "$libs": "./src/libs/index.ts",
    "$utils": "./src/libs/utils/mod.ts",
    "$helpers": "./src/helpers/mod.ts",
    "$logger": "./src/libs/logger/mod.ts",
    "$datetime": "./src/libs/datetime/mod.ts",
    "@std/assert": "jsr:@std/assert@^1.0.10",
    "@std/cli": "jsr:@std/cli@^1.0.9",
    "@std/log": "jsr:@std/log@^0.224.12"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/"
    ],
    "exclude": [
      "src/fixtures/**/*.ts"
    ]
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "example.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  }
}
