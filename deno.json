{
  "license": "CC-BY-4.0",
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "imports": {
    "$cli": "./src/cli/index.ts",
    "$libs": "./src/libs/index.ts",
    "@std/assert": "jsr:@std/assert@^1.0.10",
    "@std/cli": "jsr:@std/cli@^1.0.9",
    "@std/log": "jsr:@std/log@^0.224.12"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/"
    ],
    "exclude": [
      "src/fixtures/**/*.ts"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  }
}
